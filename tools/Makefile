LIB = ../c-periphery/periphery.a

TOOLS = $(basename $(wildcard *.c))

###########################################################################

CFLAGS += -std=gnu99 -pedantic
CFLAGS += -Wall -g -I../c-periphery/src
LDFLAGS +=

###########################################################################

.PHONY: all
all: $(TOOLS)

.PHONY: clean
clean:
	rm -rf $(TOOLS)

###########################################################################

%: %.c
	$(CC) $(CFLAGS) $(LDFLAGS) $< $(LIB) -o $@

###########################################################################
